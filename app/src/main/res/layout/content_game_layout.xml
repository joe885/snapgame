<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <fragment
        android:name="com.joe.snapgame.ui.playerarea.PlayerAreaFragment"
        android:id="@+id/fragmentPlayer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_player_area" />

    <fragment
        android:name="com.joe.snapgame.ui.gamearea.MainAreaFragment"
        android:id="@+id/fragmentMainArea"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        tools:layout="@layout/fragment_main_area"/>

    <fragment
        android:name="com.joe.snapgame.ui.playerarea.PlayerAreaFragment"
        android:id="@+id/fragmentPlayer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_player_area" />

</LinearLayout>